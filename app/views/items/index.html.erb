<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Creator</th>
      <th>Owner</th>
      <th>Franchise</th>
      <th>Itemtype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.creator.username %></td>
        <td><%= item.owner.username %></td>
        <td><%= item.franchise.name %></td>
        <td><%= item.item_type.name %></td>
        <td><%= link_to 'Show', item %></td>
        <% if policy(item).edit? && item.creator == item.owner %>
        <td><%= link_to "Update", edit_item_path(item) %><td>
        <% end %>
         <% if policy(item).destroy? %>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

