<p id="notice"><%= notice %></p>

<h1>Bids for <%= @auction.item.name %></h1>

<table>
  <thead>
    <tr>
      <th>Buyer</th>
      <th>Bid amount</th>
      <th>Bid time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.buyer.username %></td>
        <td><%= bid.bid_amount %></td>
        <td><%= bid.bid_time %></td>
        <td><%= link_to "edit", edit_auction_bid_path(@auction, bid) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bid', new_auction_bid_path %>
